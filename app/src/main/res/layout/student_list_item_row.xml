<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentConstrain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="100dp"
    android:minHeight="100dp">

    <TextView
        android:id="@+id/first_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="student_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toggle_background"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/first_name_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/first_name_TV"
        app:srcCompat="@drawable/button_background_toggle" />

    <ImageView
        android:id="@+id/red_switch"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/toggle_background"
        app:layout_constraintEnd_toEndOf="@+id/toggle_background"
        app:layout_constraintStart_toStartOf="@+id/toggle_background"
        app:layout_constraintTop_toTopOf="@+id/toggle_background"
        app:srcCompat="@drawable/button_circle_red" />

    <ImageView
        android:id="@+id/green_switch"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/toggle_background"
        app:layout_constraintEnd_toEndOf="@+id/toggle_background"
        app:layout_constraintStart_toStartOf="@+id/toggle_background"
        app:layout_constraintTop_toTopOf="@+id/toggle_background"
        app:srcCompat="@drawable/button_circrle_green" />

    <ImageView
        android:id="@+id/editComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/toggle_background"
        app:layout_constraintStart_toEndOf="@+id/green_switch"
        app:layout_constraintTop_toTopOf="@+id/toggle_background"
        app:srcCompat="@drawable/ic_pencil_black_18dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="395dp"
        android:layout_height="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/last_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/first_name_TV"
        app:layout_constraintEnd_toStartOf="@+id/first_name_TV"
        app:layout_constraintTop_toTopOf="@+id/first_name_TV" />

</androidx.constraintlayout.widget.ConstraintLayout>